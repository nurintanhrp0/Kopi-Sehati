<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"	android:orientation="horizontal" android:layout_width="match_parent"	android:layout_height="wrap_content"	android:paddingVertical="15dp">	<LinearLayout		android:layout_width="match_parent"		android:layout_height="wrap_content"		android:orientation="horizontal"		android:weightSum="1">		<ImageView			android:layout_weight="0.3"			android:layout_width="0dp"			android:layout_height="80dp"			android:src="@drawable/ic_voucher"			android:id="@+id/thumbnail"></ImageView>		<LinearLayout			android:paddingHorizontal="10dp"			android:layout_width="0dp"			android:layout_height="wrap_content"			android:layout_weight="0.7"			android:orientation="vertical">			<TextView				android:layout_width="match_parent"				android:layout_height="wrap_content"				android:id="@+id/title"				android:text="Voucher Rp 15,000 Espresso"				android:textStyle="bold"				android:textColor="@color/colorPrimaryDark"				android:textSize="22dp"></TextView>			<TextView				android:layout_width="match_parent"				android:layout_height="wrap_content"				android:id="@+id/isi"				android:text="Nikmati potongan harga Rp 15,000 untuk pembelian Espresso apa saja"				android:textColor="@color/colorPrimaryDark"				android:textSize="16dp"></TextView>		</LinearLayout>	</LinearLayout></LinearLayout>