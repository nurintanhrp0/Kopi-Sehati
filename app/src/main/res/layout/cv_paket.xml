<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="30dp"
    android:background="@android:color/white">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/img1"
        android:id="@+id/thumbnail2"></ImageView>

    <ImageView
        android:visibility="gone"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:src="@drawable/img1"
        android:id="@+id/thumbnail"></ImageView>


    <LinearLayout
            android:id="@+id/detail"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/namaProduk"
                android:text="Americano"
                android:textSize="16dp"
                android:textColor="@android:color/black"></TextView>
            
            <TextView
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/qty"
                android:text="Cup"
                android:textSize="18dp"></TextView>

            <TextView
                android:textSize="14dp"
                android:textStyle="italic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/isi"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/periode"
                android:text="Durasi Berlangganan"
                android:textSize="14dp"></TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/blockHarga">

                <TextView
                    android:textStyle="italic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/normal_price"
                    android:text="Rp 0"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"></TextView>

                <View
                    android:id="@+id/line"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_alignStart="@id/normal_price"
                    android:layout_alignEnd="@id/normal_price"
                    android:background="@android:color/black" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/normal_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/subscribe_price"
                    android:text="Rp 0"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"></TextView>

            </RelativeLayout>


            </LinearLayout>

        </LinearLayout>
