<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:numberpicker="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <RelativeLayout
        android:id="@+id/blockAtas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


            <ImageView
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/img4"></ImageView>

            <ImageView
                android:padding="10dp"
                android:tint="@color/colorPrimaryDark"
                android:background="@drawable/border_white"
                android:layout_marginVertical="35dp"
                android:layout_marginHorizontal="30dp"
                android:id="@+id/icBack"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:src="@drawable/icon_back"></ImageView>


        </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="320dp"
        android:layout_alignEnd="@id/blockAtas"
        android:id="@+id/blockDetail"
        android:backgroundTint="@color/bgabuabu"
        android:background="@drawable/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/namaProduk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/thumbnail"
            android:text="Frapucino"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textAlignment="center"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/namaProduk"
            android:text="Made by 100% been coffee Arabica, fresh milk, and plum sugar."
            android:id="@+id/detailProduk"
            android:layout_marginHorizontal="20dp"
            android:textColor="@android:color/white"
            android:layout_marginTop="15dp"
            android:textSize="14dp"></TextView>

        <LinearLayout
            android:visibility="gone"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detailProduk"
            android:id="@+id/blockShoot"
            android:orientation="horizontal">

         </LinearLayout>

        <TextView
            android:layout_marginHorizontal="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtSize"
            android:text="Size"
            android:textColor="@android:color/white"
            android:textSize="15dp"></TextView>

        <LinearLayout
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtSize"
            android:id="@+id/blockSize"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

         </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="Total"
                android:textColor="@android:color/white"
                android:textSize="15dp"></TextView>

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtTotal"
                android:layout_marginHorizontal="20dp"
                android:text="Rp 40.000"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:textStyle="bold"></TextView>

            <ImageView
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:src="@drawable/addtocart"
                android:tint="@android:color/black"
                android:id="@+id/btnOrder"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/border_white"
                android:text="Order"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp"
                android:textStyle="bold"></ImageView>

            <ImageView
                android:visibility="gone"
                android:layout_toLeftOf="@id/btnOrder"
                android:padding="10dp"
                android:src="@drawable/trash"
                android:tint="@android:color/white"
                android:id="@+id/btnHapus"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:backgroundTint="@android:color/holo_red_dark"
                android:background="@drawable/border_white"
                android:text="Order"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp"
                android:textStyle="bold"></ImageView>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
    android:id="@+id/blockQty"
    android:layout_alignParentRight="true"
    android:layout_marginRight="15dp"
    android:layout_marginTop="250dp"
    android:layout_width="60dp"
    android:layout_height="120dp"
    android:orientation="vertical"
    android:background="@drawable/background_border">

    <TextView
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="@android:color/black"
        android:id="@+id/increment"
        android:text="+"/>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_width="40dp"
        android:background="@drawable/background_border"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_height="35dp"
        android:text="1"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:id="@+id/display"
        android:gravity="center"
        />

    <TextView
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:textSize="25dp"
        android:id="@+id/decrement"
        android:textStyle="bold"
        android:text="â€”"/>

</LinearLayout>

</RelativeLayout>
