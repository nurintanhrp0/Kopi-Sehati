<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DaftarAlamat"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/blockHeader"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:layout_marginLeft="-20dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_back"
            android:id="@+id/icBack"></ImageView>

        <TextView
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp"
            android:layout_marginVertical="8dp"
            android:layout_weight="1.4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Daftar Alamat"
            android:textAlignment="center"
            android:id="@+id/txtTitle"></TextView>

    </LinearLayout>

            <Button
                android:layout_below="@id/blockHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_white"
                android:backgroundTint="@color/hijau"
                android:text="+ TAMBAH ALAMAT"
                android:textColor="@android:color/white"
                android:id="@+id/tambah"></Button>


            <ListView
                android:layout_below="@id/tambah"
                android:divider="@null"
                android:layout_marginTop="20dp"

                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:id="@+id/blockAlamat"></ListView>



</LinearLayout>