<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".ReferralCode"    android:orientation="vertical"    android:background="@android:color/white"    android:paddingHorizontal="20dp">    <ScrollView        android:scrollbars="none"        android:layout_width="match_parent"        android:layout_height="wrap_content">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:orientation="vertical">            <LinearLayout                android:paddingVertical="5dp"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:id="@+id/blockHeader"                android:orientation="horizontal"                android:weightSum="2">                <ImageView                    android:layout_marginLeft="-16dp"                    android:layout_marginTop="5dp"                    android:layout_weight="0.4"                    android:layout_width="0dp"                    android:layout_height="35dp"                    android:src="@drawable/ic_back"                    android:id="@+id/icBack"></ImageView>                <TextView                    android:text="Referral Code"                    android:layout_marginLeft="30dp"                    android:textColor="@color/colorPrimaryDark"                    android:textSize="18dp"                    android:layout_marginVertical="10dp"                    android:layout_weight="1.4"                    android:layout_width="0dp"                    android:layout_height="wrap_content"                    android:gravity="center_horizontal"                    android:id="@+id/txtTitle"></TextView>            </LinearLayout>            <ImageView                android:layout_width="match_parent"                android:layout_height="150dp"                android:src="@drawable/banner2"                android:id="@+id/thumbnail"></ImageView>            <LinearLayout                android:background="@drawable/radius_corners"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:orientation="vertical">                <TextView                    android:paddingVertical="10dp"                    android:id="@+id/txtBagikan"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center_horizontal"                    android:text="Bagikan Kode"                    android:textColor="@android:color/black"                    android:textSize="16dp"></TextView>                <LinearLayout                    android:paddingBottom="20dp"                    android:paddingHorizontal="20dp"                    android:weightSum="2"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:orientation="horizontal">                    <TextView                        android:textColor="@android:color/black"                        android:textAlignment="center"                        android:padding="10dp"                        android:id="@+id/txtKode"                        android:layout_weight="1.6"                        android:layout_width="0dp"                        android:layout_height="wrap_content"                        android:background="@drawable/radius_corners"                        android:backgroundTint="@color/abu"></TextView>                    <ImageView                        android:onClick="shareProduk"                        android:padding="8dp"                        android:layout_width="0dp"                        android:layout_height="39dp"                        android:layout_weight="0.4"                        android:src="@drawable/share"                        android:id="@+id/btnShare"                        android:background="@drawable/radius_corners"                        android:backgroundTint="@color/biru"                        android:tint="@android:color/white"></ImageView>                </LinearLayout>            </LinearLayout>            <TextView                android:layout_marginVertical="10dp"                android:textSize="18dp"                android:textColor="@android:color/black"                android:layout_width="match_parent"                android:layout_height="match_parent"                android:id="@+id/isi"                android:inputType="textMultiLine"></TextView>        </LinearLayout>    </ScrollView></LinearLayout>