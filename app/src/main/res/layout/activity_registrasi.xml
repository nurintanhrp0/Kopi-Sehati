<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registrasi"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@android:color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:id="@+id/logo"></ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yuk registrasi untuk menjadi member!"
        android:id="@+id/txtTitle"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:textColor="@color/colorPrimaryDark">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:layout_marginTop="30dp"
        android:textSize="14dp"
        android:id="@+id/txtNama">
    </TextView>

    <EditText
        android:padding="10dp"
        android:id="@+id/inpNama"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/background_border"
        android:layout_marginTop="8dp"
        android:hint="  Nama"></EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_marginTop="20dp"
        android:textSize="14dp"
        android:id="@+id/txtEmail">
    </TextView>

    <EditText
        android:padding="10dp"
        android:id="@+id/inpEmail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/background_border"
        android:layout_marginTop="8dp"
        android:hint="  Email"></EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PIN"
        android:layout_marginTop="20dp"
        android:textSize="14dp"
        android:id="@+id/txtPin">
    </TextView>

    <EditText
        android:maxLength="6"
        android:inputType="numberPassword"
        android:padding="10dp"
        android:id="@+id/inpPin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/background_border"
        android:layout_marginTop="8dp"
        android:hint="  PIN"></EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Referral Code ( Optional )"
        android:layout_marginTop="20dp"
        android:textSize="14dp"
        android:id="@+id/txtReferralCode">
    </TextView>

    <EditText
        android:maxLength="6"
        android:inputType="textCapCharacters"
        android:padding="10dp"
        android:id="@+id/inpReferralCode"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/background_border"
        android:layout_marginTop="8dp"
        android:hint="  Referral Code"></EditText>

    <Button
        android:id="@+id/btnDaftar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DAFTAR"
        android:layout_marginTop="50dp"
        android:background="@drawable/background_border"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@android:color/white"></Button>

</LinearLayout>